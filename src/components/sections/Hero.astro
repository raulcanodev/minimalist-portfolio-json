---
import { basics } from "@cv"
import Section from "@/components/Section.astro"
import Copy from "@/icons/copy.astro"
import LinkedIn from "@/icons/LinkedIn.astro"
import GitHub from "@/icons/GitHub.astro"
import WorldMap from "@/icons/WorldMap.astro"
import type { SocialIcon } from "@/types"

const { name, label, image, location, profiles, email } = basics
const { city, region } = location

const SOCIAL_ICONS: SocialIcon = {
  GitHub,
  LinkedIn,
  Copy,
}

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn")
const linkedUrl = linkedInfo?.url

const printInfo = [email, linkedUrl].filter(Boolean).join(" • ")
---

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const mailElement = document.querySelector(".copy");
    if (mailElement) {
      mailElement.addEventListener('click', (e)=> {
        e.preventDefault();
        const emailDisplay = document.getElementById("emailDisplay");
        if (emailDisplay) {
          emailDisplay.textContent = "Copy!";
          setTimeout(() => {
            emailDisplay.textContent = "rawraul@outlook.com";
          }, 2000); // Cambiar de vuelta a la dirección de correo después de 2 segundos
        }
        navigator.clipboard.writeText('rawraul@outlook.com');
        console.log('Email copied!');
      });
    }
  });
</script>

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        <WorldMap />
        {city}, {region}
      </span>
      <footer class="print">
        {printInfo}
      </footer>
      <footer class="no-print">

        <p>
          <span id="emailDisplay">rawraul@outlook.com</span> <a class="copy"><Copy/></a>
        </p>

        {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network]

            return (
              <a
                href={url}
                title={`Visitar el perfil de ${name} en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            )
          })
        }
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  p{
    display: flex;
    align-items: center;
    border: 1px solid #eee;
    border-radius: 6px;
    text-decoration: none;
  }
  
  p span {
    padding-inline: 6px;
    padding-top: 2px;
    padding-bottom: 2px;
    text-decoration: none;
    font-size: 12px;
  }

  footer.no-print p > a:first-of-type {
  /* Estilos para el primer enlace dentro del párrafo dentro del footer con la clase 'no-print' */
    border: none;
    border-left: 1px solid #eee;
    border-top-left-radius: 0; /* Radio de borde superior izquierdo */
    border-bottom-left-radius: 0; /* Radio de borde inferior izquierdo */
    border-top-right-radius: 4.7px; /* Radio de borde superior derecho */
    border-bottom-right-radius: 4.7px;
    height: 30.70px;
    width: 30.70px;
}

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    color: #444;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    border-radius: 16px;
  }

  span {
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }



  footer {
    color: #555;
    font-size: 0.65rem;
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }

  footer a {
    color: #777;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  /* footer > a:first-of-type:not(.other-class) {
  border: none;
} */


  footer a:hover {
    background: #eee;
    border: 1px solid #ddd;
  }

  @media (width <= 700px) {
    .container {
      flex-direction: column-reverse;
    }

    .info {
      justify-content: center;
      align-items: center;
      padding-right: 0;
      text-align: center;
    }

    figure {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    h2 {
      text-wrap: balance;
    }

    figure {
      margin: 0 auto;
    }
  }
</style>
